/*音频播放视图*/
.punch-card-diary-audio-play-item {
    width: auto;
    height: 130rpx;
    margin: 20rpx 0;

    background-color: #B2DFDB;

    border-radius: 14rpx;

    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: nowrap;
}

/*音频播放视图 控制按钮区块*/
.audio-control-btn-area {
    /*background-color: #64DD17;*/
    width: 20%;
    height: 130rpx;

    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: center;
    align-items: center;
}
.audio-control-btn {
    width: 60%;
    height: 0;
    padding-bottom: 60%;
    position: relative;
}
.audio-control-btn > image {
    /*解决图片高度等同于宽度问题*/
    width: 100%;
    height: 100%;
    position: absolute;
}

/*音频播放视图 播放进度条区域*/
.audio-play-progress-area {
    width: 80%;
    height: 130rpx;

    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: flex-start;
    align-items: flex-start;
}

.audio-name {
    height: 26rpx;
    width: 85%;
    line-height: 26rpx;
    margin: 20rpx 0 20rpx 30rpx;

    font-size: 26rpx;
    color: white;

    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.audio-play-progress {
    height: 40rpx;
    width: 85%;
    margin-left: 30rpx;
    font-size: 26rpx;
    color: white;

    display: flex;
    flex-wrap: nowrap;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.audio-play-last-time .audio-play-end-time {
    color: whitesmoke;
    font-size: 24rpx;
    width: auto;
}

.audio-play-progress-item {
    width: 80%;
}
slider {
    margin: 10px !important;
}
